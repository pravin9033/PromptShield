{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PromptShield Attack Pack",
  "type": "object",
  "required": ["name", "version", "description", "attacks"],
  "additionalProperties": false,
  "properties": {
    "name": {"type": "string", "minLength": 1},
    "version": {"type": "string", "minLength": 1},
    "description": {"type": "string"},
    "attacks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["prompt"],
        "additionalProperties": false,
        "properties": {
          "id": {"type": "string"},
          "prompt": {"type": "string", "minLength": 1},
          "system_prompt": {"type": "string"},
          "category": {"type": "string"},
          "tags": {
            "type": "array",
            "items": {"type": "string"},
            "default": []
          },
          "expect_block": {"type": "boolean"},
          "notes": {"type": "string"}
        }
      }
    }
  }
}
